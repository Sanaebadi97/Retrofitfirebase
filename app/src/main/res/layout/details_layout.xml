<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/bg_card_view"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:scrollbarSize="1dp"
            android:scrollbarThumbVertical="@color/bg_card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_real_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="@dimen/row_text_padding"
                    android:textColor="#020035"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="name"/>

                <TextView
                    android:id="@+id/txt_team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="@dimen/row_text_padding"
                    android:textColor="#020035"
                    android:textSize="@dimen/row_text_size"
                    android:textStyle="bold"
                    tools:text="1994"/>

                <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher"/>


                <TextView
                    android:id="@+id/txt_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="@dimen/row_text_padding"
                    android:textColor="#131212"
                    android:textSize="@dimen/row_text_size"
                    android:textStyle="bold"
                    tools:text="@string/bio_text"/>


                <TextView
                    android:id="@+id/txt_created_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:padding="@dimen/row_text_padding"
                    android:textColor="#055473"
                    android:textSize="@dimen/row_text_size"
                    tools:text="1994"/>

                <TextView
                    android:id="@+id/txt_publisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:padding="@dimen/row_text_padding"
                    android:textColor="#055473"
                    android:textSize="@dimen/row_text_size"
                    tools:text="1994"/>


            </LinearLayout>

        </ScrollView>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>